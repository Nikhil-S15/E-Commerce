<div class="container">
    <div class="screen-overlay"></div>
    <main class="main-wrap mx-auto">
      <section class="content-main">
        <div class="row">
          <div class="col-12">
            <div class="content-header">
              <h2 class="content-title">Edit Product</h2>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="card mb-4">
              <div class="card-body">
                <form class="myForm" id="myForm" method="post" action="/admin/editProduct/<%= product.id %>" enctype="multipart/form-data">
                  <div class="row">
                    <div class="col-lg-6 mb-3">
